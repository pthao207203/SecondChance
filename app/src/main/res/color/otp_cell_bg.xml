<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused -->
    <item android:state_focused="true" android:color="@color/normalDay">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/radius_m"/>
            <stroke
                android:width="2dp"
                android:color="@color/normalDay"/>
        </shape>
    </item>

    <!-- Enabled (default) -->
    <item android:state_enabled="true" android:color="@color/normalDay">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/radius_m"/>
            <stroke
                android:width="2dp"
                android:color="@color/normalDay"/>
        </shape>
    </item>

    <!-- Disabled -->
    <item android:color="@color/normalDay">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/radius_m"/>
            <stroke
                android:width="2dp"
                android:color="@color/normalDay"/>
        </shape>
    </item>

</selector>
