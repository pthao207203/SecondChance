<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SecondChance" parent="Theme.Material3.Light.NoActionBar">
        <!-- brand -->
        <item name="colorPrimary">@color/normalDay</item>
        <item name="colorOnPrimary">@color/whiteDay</item>

        <!-- app background & bars -->
        <item name="android:windowBackground">@color/whiteDay</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/whiteDay</item>

        <!-- default components -->
        <item name="textInputStyle">@style/Widget.SecondChance.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.SecondChance.Button.Primary</item>
        <item name="textAppearanceBodyLargeEmphasized">@style/Text.SecondChance.Title20</item>
        <item name="textAppearanceBodyLarge">@style/Text.SecondChance.Body16</item>
        <item name="textAppearanceBodySmall">@style/Text.SecondChance.Note13</item>
    </style>

    <!-- Text tiêu đề 20sp -->
    <style name="Text.SecondChance.Title20" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <!-- Text mặc định 16sp -->
    <style name="Text.SecondChance.Body16" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <!-- Text nhỏ ghi chú  -->
    <style name="Text.SecondChance.Note13" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_13</item>
    </style>

    <!-- TextInputLayout outlined (reusable) -->
    <style name="Widget.SecondChance.TextInputLayout"
        parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_outline_orange</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <item name="boxCornerRadiusTopStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_m</item>

        <item name="android:textColorHint">@color/selector_hint_orange</item>
        <item name="endIconTint">@color/selector_end_icon_orange</item>
        <item name="hintTextColor">@color/selector_hint_orange</item>
    </style>

    <!-- MaterialButton primary (reusable) -->
    <style name="Widget.SecondChance.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/normalDay</item>
        <item name="android:textColor">@color/whiteDay</item>
        <item name="cornerRadius">@dimen/radius_m</item>
        <item name="strokeColor">@color/normalDay</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Text link (Forgot / Signup) -->
    <style name="Text.SecondChance.Link" parent="Text.SecondChance.Body16">
        <item name="android:textColor">@color/darkDay</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- EditText 16sp cho form -->
    <style name="Widget.SecondChance.EditText" parent="">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/darkDay</item>
        <item name="android:textColorHint">@color/selector_hint_orange</item>
    </style>

    <!-- OTP Cell -->
    <style name="OtpCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:includeFontPadding">false</item>

        <!-- Nhập mỗi ô 1 số -->
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:digits">0123456789</item>

        <!-- Nền trong suốt + viền cam qua drawable -->
        <item name="android:background">@color/otp_cell_bg</item>
        <!-- Tắt tint mặc định để không bị overlay màu -->
        <item name="android:backgroundTint">@null</item>

        <!-- Chặn autofill/gợi ý -->
        <item name="android:importantForAutofill" tools:targetApi="26">no</item>
        <item name="android:autofillHints" tools:targetApi="26" />
    </style>
    <!-- Title text -->

    <style name="Text.SecondChance.Title.Small" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/darkerDay</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Card-->
    <style name="Widget.SecondChance.Card.Base" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">@dimen/radius_m</item>
    </style>

    <style name="Widget.SecondChance.Card.AuctionCurrent" parent="Widget.SecondChance.Card.Base">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/whiteDay</item>
    </style>

    <style name="Widget.SecondChance.Card.AuctionExpired" parent="Widget.SecondChance.Card.Base">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/darkerDay</item>
    </style>

    <style name="Widget.SecondChance.Card.Auction" parent="Widget.SecondChance.Card.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkerDay</item>
        <item name="android:backgroundTint">@color/whiteDay</item>
    </style>

    <style name="Widget.SecondChance.Card.Negotiation" parent="Widget.SecondChance.Card.Base">
        <item name="android:backgroundTint">@color/lighterDay</item>
    </style>

    <style name="Widget.SecondChance.Card.Fixed" parent="Widget.SecondChance.Card.Base">
        <item name="android:backgroundTint">@color/lighterDay</item>
    </style>

    <style name="Widget.SecondChance.Card.Number" parent="Widget.SecondChance.Card.Base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.SecondChance.Card.Menu" parent="Widget.SecondChance.Card.Base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="Widget.SecondChance.Card.Header" parent="Widget.SecondChance.Card.Base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="Widget.SecondChance.Card.BorderBottom" parent="Widget.SecondChance.Card.Base">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/borderbottom</item>
    </style>



</resources>
