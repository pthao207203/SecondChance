<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TIL.Hint.Large" parent="TextAppearance.Material3.BodyMedium">
        <!-- tăng size label khi COLLAPSED -->
        <item name="android:textSize">20sp</item> <!-- thử 16–18sp -->
    </style>

    <dimen name="card_corner_radius">12dp</dimen>
    <dimen name="card_corner_16dp">16dp</dimen>

    <style name="ShapeAppearance.App.Card.BottomRightCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/card_corner_radius</item>
    </style>

    <style name="ShapeAppearance.App.Card.BottomLeftCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="buttonTint">@null</item>
    </style>

    <style name="ShapeAppearance.App.Card.TopRightCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.App.Card.TopLeftCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.CornerSize8dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearance.App.Card.LeftCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="ShapeAppearance.App.Card.RightCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/card_corner_16dp</item>
    </style>
    <style name="ShapeAppearance.App.Card.TopLeftNotCorner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_16dp</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_16dp</item>
        <item name="cornerSizeBottomRight">@dimen/card_corner_16dp</item>
    </style>
    <style name="RoundedImageView_8dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="RoundedImageView_20dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="RoundedImageView_25dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>
    <style name="DashedOrangeBorderBox">
        <item name="android:background">@drawable/bg_dashed_orange_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
