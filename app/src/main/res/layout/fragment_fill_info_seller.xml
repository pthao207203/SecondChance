<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Điền thông tin"
        android:textColor="@color/darkerDay"
        android:textStyle="bold"
        android:textSize="@dimen/text_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Họ và tên -->
    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/darkerDay"
        android:textSize="@dimen/text_16"
        android:hint="Cá biết bay"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CCCD -->
    <TextView
        android:id="@+id/tvCCCDLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số CCCD"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etCCCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/darkerDay"
        android:textSize="@dimen/text_16"
        android:hint="0897257963"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tvCCCDLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ảnh CCCD -->
    <TextView
        android:id="@+id/tvImageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ảnh CCCD (mặt trước, sau)"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etCCCD"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvImageLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ô thêm ảnh/video -->

        <!-- Mặt trước CCCD -->

        <LinearLayout
            android:id="@+id/btnAddMedia"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_border_dashed_orange"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_add_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Thêm ảnh"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_13" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgCCCDFront"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/giohoa1"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView_8dp"
            android:layout_marginEnd="5dp" />

        <!-- Mặt sau CCCD -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgCCCDBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/giohoa2"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImageView_8dp" />

    </LinearLayout>


    <!-- Tên shop -->
    <TextView
        android:id="@+id/tvShopLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên shop"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageContainer"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etShopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:textColor="@color/darkerDay"
        android:textSize="@dimen/text_16"
        android:hint="Tiệm Hoa"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvShopLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Địa chỉ -->
    <TextView
        android:id="@+id/tvPickupAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ lấy hàng (của shop)"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etShopName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPickupContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:hint="Tên người liên hệ tại shop"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvPickupAddressLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPickupContactPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:hint="SĐT liên hệ tại shop"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/etPickupContactName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPickupStreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:hint="Số nhà, tên đường"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/etPickupContactPhone"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/cityProvinceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etPickupStreet">

        <EditText
            android:id="@+id/etPickupProvince"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_light_active_outline"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:hint="Quận / Huyện"
            android:inputType="text" />

        <EditText
            android:id="@+id/etPickupCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_light_active_outline"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:hint="Tỉnh / Thành phố"
            android:inputType="text" />
    </LinearLayout>

    <EditText
        android:id="@+id/etPickupPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="8dp"
        android:paddingVertical="10dp"
        android:hint="Mã bưu điện (Postal Code)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/cityProvinceContainer"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- CHECKBOX ĐỒNG Ý – TRÊN NÚT -->
    <LinearLayout
        android:id="@+id/checkboxContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPickupPostalCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="5dp"
            android:text="Tôi đồng ý với chính sách bảo mật"
            android:textColor="@color/normalDay"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="Đồng ý"
            android:src="@drawable/ic_checkbox_unchecked" />
    </LinearLayout>

    <!-- NÚT ĐĂNG KÝ – DƯỚI CHECKBOX -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="ĐĂNG KÝ"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/whiteDay"
        android:backgroundTint="@color/normalDay"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/checkboxContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
