<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackground"
    android:padding="0dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProduct"
        android:layout_width="53dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_flower"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CornerSize8dp"
        app:strokeWidth="0dp"/>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500.000"
        android:textSize="@dimen/text_16"
        android:textStyle="bold"
        android:textColor="@color/darkerDay"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvđ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đ"
        android:textSize="@dimen/text_16"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:textColor="@color/normalDay"
        android:layout_toStartOf="@id/tvPrice" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@id/tvđ"
        android:layout_toEndOf="@id/ivProduct"
        android:text="Giỏ gỗ cắm hoa"
        android:textColor="@color/darkerDay"
        android:textSize="@dimen/text_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_toEndOf="@id/ivProduct"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="1 mẫu, giá cố định, bảo hành..."
        android:textColor="@color/darkerDay"
        android:textSize="@dimen/text_13"/>


</RelativeLayout>