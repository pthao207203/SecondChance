<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.secondchance.ui.home.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:dividerPadding="8dp">

            <!-- Auction section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text.SecondChance.Body16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đấu giá"
                        android:textColor="@color/darkerDay"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.SecondChance.Card.Number"
                        android:id="@+id/tvSeeAllAuction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/whiteDay"
                        >

                        <TextView
                            style="@style/Text.SecondChance.Note13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem tất cả"
                            android:textColor="@color/darkerDay"
                            android:textStyle="normal" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/auction_card_home"
                    style="@style/Widget.SecondChance.Card.AuctionCurrent"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/auctionImage"
                            android:layout_width="98dp"
                            android:layout_height="115dp"
                            android:layout_marginEnd="4dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/app_name"
                            tools:src="@drawable/nhan1" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="115dp"
                            android:layout_weight="1"
                            android:background="@color/normalDay"
                            android:paddingLeft="16dp"
                            android:paddingTop="8dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="8dp">

                            <LinearLayout
                                android:id="@+id/countdown_timer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.google.android.material.card.MaterialCardView
                                    style="@style/Widget.SecondChance.Card.Number"
                                    android:id="@+id/hours_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/lightDay"
                                    android:gravity="center"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">
                                    <TextView
                                        android:id="@+id/hours_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="4dp"
                                        android:text="02"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/hours_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:text="h"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp" />

                                <com.google.android.material.card.MaterialCardView
                                    style="@style/Widget.SecondChance.Card.Number"
                                    android:id="@+id/minutes_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/lightDay"
                                    android:gravity="center"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">
                                    <TextView
                                        android:id="@+id/minutes_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="4dp"
                                        android:text="39"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/minutes_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:text="m"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp" />

                                <com.google.android.material.card.MaterialCardView
                                    style="@style/Widget.SecondChance.Card.Number"
                                    android:id="@+id/seconds_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/lightDay"
                                    android:gravity="center"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">
                                    <TextView
                                        android:id="@+id/seconds_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:padding="4dp"
                                        android:text="12"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </com.google.android.material.card.MaterialCardView>

                                <TextView
                                    android:id="@+id/seconds_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text="s"
                                    android:textColor="@android:color/white"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/product_name"
                                style="@style/Text.SecondChance.Body16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/countdown_timer"
                                android:layout_marginBottom="4dp"
                                tools:text="Vòng hoa hướng dương vàng"
                                android:textColor="@color/whiteDay" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/current_price_layout"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Số lượng:"
                                    android:textColor="@color/whiteDay"
                                    android:textSize="13sp" />

                                <!-- ✅ thêm id để set runtime -->
                                <TextView
                                    android:id="@+id/quantityValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="x1"
                                    android:textColor="@color/whiteDay"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/current_price_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/labelCurrentPrice"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Giá hiện tại:"
                                    android:textColor="@color/whiteDay"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/currentPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="₫8.500.000"
                                    android:textColor="@color/whiteDay"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Functions section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

            <TextView
                style="@style/Text.SecondChance.Body16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Chức năng"
                android:textColor="@color/darkerDay"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardBackgroundColor="@color/highlight4blur"
                    app:cardElevation="0dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.BottomRightCorner"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/highLight5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="16dp"
                        android:text="Định giá bằng AI ngay"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_negotiation"
                        style="@style/Widget.SecondChance.Card.Number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/highlight7blur"
                        android:gravity="center"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/highLight8"
                        app:strokeWidth="2dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:gravity="center"
                            android:text="Thương lượng"
                            android:textColor="@color/darkerDay"
                            android:textSize="13sp"
                            android:textStyle="normal" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardBackgroundColor="@color/highlight3blur"
                    app:cardElevation="0dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.TopRightCorner"
                    app:strokeColor="@color/highLight3"
                    app:strokeWidth="1dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="16dp"
                        android:text="Trở thành người bán"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardBackgroundColor="@color/highlight1blur"
                    app:cardElevation="0dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.TopLeftCorner"
                    app:strokeColor="@color/highLight1"
                    app:strokeWidth="1dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="16dp"
                        android:text="Xem đơn hàng của bạn"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:paddingVertical="8dp"
                        tools:listitem="@layout/item_category_chip" />

                </LinearLayout>
                <View
                    android:layout_width="277dp"
                    android:layout_height="2dp"
                    android:background="@color/darkerDay"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>



        <!-- You might like section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Có thể bạn sẽ thích"
            android:textSize="@dimen/text_20"
            android:textColor="@color/darkerDay"
            android:textStyle="bold" />

            <!-- Nhúng CardListFragment tại đây -->
            <fragment
                android:id="@+id/cardListFragment"
                android:name="com.example.secondchance.ui.card.CardListFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_recycler_card" />

    </LinearLayout>
</ScrollView>
