<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackground">

    <!-- Checkbox chọn sản phẩm -->
    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:button="@drawable/checkbox_selector"
        android:background="@null"
        android:padding="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <!-- Ảnh sản phẩm -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivProduct"
        android:layout_width="@dimen/product_image"
        android:layout_height="@dimen/product_image"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_flower"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CornerSize8dp"
        app:strokeWidth="0dp"
        android:layout_marginEnd="12dp"/>

    <!-- Thông tin sản phẩm -->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ gỗ cắm hoa"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="4dp"
            android:text="1 mẫu, giá cố định, bảo hành..."
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₫ 50.000"
            android:textColor="@color/orange_primary"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tvTitle" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_below="@id/tvDesc"
            android:layout_marginTop="4dp" />
    </RelativeLayout>

</LinearLayout>
