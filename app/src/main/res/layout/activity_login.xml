<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="0dp"
    android:background="@color/lightDay">

    <!-- Logo + Title -->
    <ImageView
        android:paddingHorizontal="24dp"
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo2chance"
        app:layout_constraintDimensionRatio="269:120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1" />

    <!-- Phone -->
    <com.google.android.material.textfield.TextInputLayout
        android:paddingHorizontal="40dp"
        android:id="@+id/tilPhone"
        style="@style/Widget.SecondChance.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/phone"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/space_12"
        app:hintTextAppearance="@style/TIL.Hint.Large">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPhone"
            style="@style/Widget.SecondChance.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLines="1"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password -->
    <com.google.android.material.textfield.TextInputLayout
        android:paddingHorizontal="40dp"
        android:id="@+id/tilPassword"
        style="@style/Widget.SecondChance.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/normalDay"
        app:layout_constraintTop_toBottomOf="@id/tilPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/space_20"
        app:hintTextAppearance="@style/TIL.Hint.Large">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassword"
            style="@style/Widget.SecondChance.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="20sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Forgot -->
    <TextView
        android:id="@+id/tvForgot"
        style="@style/Text.SecondChance.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotpassword"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/space_20"
        android:textSize="20sp"/>

    <!-- Login button -->
    <com.google.android.material.button.MaterialButton
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/btnLogin"
        style="@style/Widget.SecondChance.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/login"
        app:layout_constraintTop_toBottomOf="@id/tvForgot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/space_20"
        app:contentPaddingStart="@dimen/space_24"
        app:contentPaddingEnd="@dimen/space_24"
        android:textSize="20sp"/>

    <!-- Sign up -->
    <TextView
        android:id="@+id/tvSignup"
        style="@style/Text.SecondChance.Link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/space_20"
        android:textSize="20sp"/>

    <!-- Wave trang trÃ­ -->
    <ImageView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/frame1000002455"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
