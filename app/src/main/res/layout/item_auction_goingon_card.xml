<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="request"
            type="com.example.secondchance.ui.auction.AuctionGoingOn" />
        <variable
            name="hasReply"
            type="boolean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SecondChance.Card.AuctionCurrent"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/auctionImage"
                        android:layout_width="98dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="nhan"
                        android:src="@drawable/nhan1" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="115dp"
                        android:layout_weight="1"
                        android:background="@color/normalDay"
                        android:paddingLeft="16dp"
                        android:paddingTop="8dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:id="@+id/countdown_timer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                style="@style/Widget.SecondChance.Card.Number"
                                android:id="@+id/hours_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/lightDay"
                                android:gravity="center"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">
                                <TextView
                                    android:id="@+id/hours_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="02"
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="bold" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/hours_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:text="h"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_16" />

                            <com.google.android.material.card.MaterialCardView
                                style="@style/Widget.SecondChance.Card.Number"
                                android:id="@+id/minutes_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/lightDay"
                                android:gravity="center"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">
                                <TextView
                                    android:id="@+id/minutes_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="39"
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="bold" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/minutes_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:text="m"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_16" />

                            <com.google.android.material.card.MaterialCardView
                                style="@style/Widget.SecondChance.Card.Number"
                                android:id="@+id/seconds_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/lightDay"
                                android:gravity="center"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">
                                <TextView
                                    android:id="@+id/seconds_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:text="12"
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="bold" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/seconds_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="s"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/product_name"
                            style="@style/Text.SecondChance.Body16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/countdown_timer"
                            android:layout_marginBottom="4dp"
                            android:text="Vòng hoa hướng dương vàng"
                            android:textColor="@color/whiteDay" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/current_price_layout"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Số lượng:"
                                android:textColor="@color/whiteDay"
                                android:textSize="@dimen/text_13"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/quantityText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x1"
                                android:textColor="@color/whiteDay"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/current_price_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/labelCurrentPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Giá hiện tại:"
                                android:textColor="@color/whiteDay"
                                android:textSize="@dimen/text_13"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/currentPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₫8.500.000"
                                android:textColor="@color/whiteDay"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/bid_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5F6F8"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/bid_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Đã ra giá lần 4: ₫ 500.000"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Tiếp tục ra giá →"
                        android:textColor="@color/normalDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>


</layout>