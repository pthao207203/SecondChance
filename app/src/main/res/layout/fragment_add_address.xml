<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteDay"
    android:padding="16dp">

    <!-- Name Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="16dp"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:inputType="textPersonName" />

    <!-- Phone Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SĐT"
        android:textSize="14sp"
        android:textColor="#1C1B1F"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="16dp"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:inputType="phone" />

    <!-- Address Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ mới"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_light_active_outline"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:textSize="14sp"
        android:textColor="@color/darkerDay"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLines="4" />

    <!-- Set as Default Checkbox -->
    <!-- Set as Default Checkbox -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbSetAsDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomCheckBox"
            android:padding="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt làm địa chỉ mặc định"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Add Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_normalday_solid"
        android:text="THÊM"
        android:textColor="@color/whiteDay"
        android:textSize="@dimen/text_20"
        android:textStyle="bold" />

</LinearLayout>