<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Label Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại địa chỉ"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/etLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_light_active_outline"
                android:paddingHorizontal="16dp"
                android:textSize="@dimen/text_16"
                android:textColor="@color/darkerDay"
                android:inputType="text"
                android:completionThreshold="1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:tint="@color/normalDay"
                android:importantForAccessibility="no" />
        </RelativeLayout>

        <!-- Name Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_light_active_outline"
            android:paddingHorizontal="16dp"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:inputType="textPersonName" />

        <!-- Phone Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại"
            android:textSize="@dimen/text_13"
            android:textColor="#1C1B1F"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_light_active_outline"
            android:paddingHorizontal="16dp"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:inputType="phone" />

        <!-- Province Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tỉnh/Thành phố"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/etProvince"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_light_active_outline"
                android:paddingHorizontal="16dp"
                android:textSize="@dimen/text_16"
                android:textColor="@color/darkerDay"
                android:inputType="text"
                android:completionThreshold="1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:tint="@color/normalDay"
                android:importantForAccessibility="no" />
        </RelativeLayout>

        <!-- Ward Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phường/Xã/Đặc khu"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/etWard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_light_active_outline"
                android:paddingHorizontal="16dp"
                android:textSize="@dimen/text_16"
                android:textColor="@color/darkerDay"
                android:inputType="text"
                android:completionThreshold="1"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:tint="@color/normalDay"
                android:importantForAccessibility="no" />
        </RelativeLayout>

        <!-- Address Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ cụ thể (Số nhà, đường)"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_light_active_outline"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textSize="@dimen/text_13"
            android:textColor="@color/darkerDay"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="2" />

        <!-- Set as Default Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cbSetAsDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomCheckBox"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt làm địa chỉ mặc định"
                android:textSize="@dimen/text_16"
                android:textColor="@color/darkerDay"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Add Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_normalday_solid"
            android:text="THÊM"
            android:textColor="@color/whiteDay"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
