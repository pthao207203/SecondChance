<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/grayDay"
    app:cardCornerRadius="@dimen/radius_m"
    app:cardElevation="0dp"
    app:strokeWidth="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivThumb"
            style="RoundedImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_flower"
            app:strokeWidth="0dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giỏ gỗ cắm hoa"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Đã thanh toán 17/6/2025"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="true">

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ"
                android:textStyle="bold"
                android:textSize="@dimen/text_20"
                android:textColor="@color/highLight1"
                android:includeFontPadding="false"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.000"
                android:textStyle="bold"
                android:textSize="@dimen/text_20"
                android:textColor="@color/darkerDay"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
