<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation_layout3">
        <LinearLayout
            android:id="@+id/layout_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguồn sản phẩm"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_source_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minh chứng"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_proof"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Giỏ hoa trang trí (đã qua sử dụng)&#10;• Tình trạng: còn đẹp ~90%, ít trầy xước."
                android:gravity="top|start"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="12dp"
                android:inputType="textMultiLine"/>

            <!-- Proof Images -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/proof_thumbnail_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </HorizontalScrollView>
        </LinearLayout>

    </ScrollView>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:id="@+id/navigation_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/btn_back3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:gravity="center_vertical"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:contentDescription="quay lại"
                        android:src="@drawable/arrow_left_ske"
                        app:tint="@color/darkerDay" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quay lại"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/btn_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tv_preview_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem trước"
                        android:textColor="#F25C05"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:contentDescription="Xem trước"
                        android:src="@drawable/arrow_right_ske"
                        app:tint="#F25C05" />
                </LinearLayout>
            </LinearLayout>
</RelativeLayout>