<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDay">

    <!-- MÀN HÌNH CHƯA CÓ TIN NHẮN -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="Chào mừng bạn đến với Chat AI định giá"
            android:textSize="@dimen/text_20"
            android:textColor="@color/darkerDay"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/space_16"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnXinChao"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào"
            android:textStyle="normal"
            android:letterSpacing="0.01"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:background="@drawable/bg_round_button"
            app:backgroundTint="@null"
            app:rippleColor="@android:color/transparent"
            android:textColor="@color/darkerDay"
            android:paddingHorizontal="24dp"
            android:paddingVertical="0dp"
            android:textSize="@dimen/text_16"
            android:layout_marginBottom="@dimen/space_8"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHuongDanGia"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ cách đấu giá được hời nhất, hãy chỉ tôi đúng giá trị"
            android:insetTop="0dp"
            android:letterSpacing="0.0"
            android:insetBottom="0dp"
            android:background="@drawable/bg_round_button"
            app:backgroundTint="@null"
            app:rippleColor="@android:color/transparent"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="@dimen/space_8"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDinhGiaMonDo"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tôi muốn định giá một món đồ"
            android:insetTop="0dp"
            android:letterSpacing="0.01"
            android:insetBottom="0dp"
            android:background="@drawable/bg_round_button"
            app:backgroundTint="@null"
            app:rippleColor="@android:color/transparent"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="@dimen/space_8"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHoanTien"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cách hoàn tiền"
            android:insetTop="0dp"
            android:letterSpacing="0.01"
            android:insetBottom="0dp"
            android:background="@drawable/bg_round_button"
            app:backgroundTint="@null"
            app:rippleColor="@android:color/transparent"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="@dimen/space_8"/>

    </LinearLayout>

    <!-- DANH SÁCH TIN NHẮN -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/inputLayout" />

    <!-- INPUT (GỬI TIN NHẮN + CHỌN ẢNH) -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteDay"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/previewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            android:visibility="gone"> <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image"/>

            <ImageView
                android:id="@+id/btnClosePreview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="#80000000"
                android:padding="4dp"
                android:layout_gravity="top|end"/>
        </FrameLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnPickImage"
                android:src="@drawable/ic_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="6dp"/>

            <EditText
                android:id="@+id/edtMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:layout_weight="1"
                android:hint="Nhập..."
                android:textColor="#4A2C19"
                android:background="@drawable/bg_round_input"
                android:paddingHorizontal="16dp"/>

            <ImageView
                android:id="@+id/btnSend"
                android:src="@drawable/ic_send"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
