<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="comment"
            type="com.example.secondchance.ui.comment.Comment" />

        <variable
            name="hasReply"
            type="boolean" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Header: Avatar + Tên + Ngày + Rating -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.SecondChance.Card.Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/whiteDay"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- Dòng 1: Avatar + Tên + Ngày + Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_marginBottom="4dp"
                    >

                    <!-- Avatar -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/avatar1"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImageView_20dp"
                        android:contentDescription="User avatar" />

                    <!-- Thông tin người dùng -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <!-- Hàng 1: Tên + Ngày -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fish can Fly"
                                android:textColor="@color/darkerDay"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_16" />

                            <TextView
                                android:id="@+id/product_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18/02/2025"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_13" />
                        </LinearLayout>

                        <!-- Hàng 2: Mô tả -->
                        <TextView
                            android:id="@+id/product_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bé cá 7 màu, bằng kính, loại dày, số lượng 1."
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_13"
                            android:layout_marginBottom="12dp" />
                    </LinearLayout>


                    <!-- Đánh giá sao -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.9"
                            android:textColor="@color/darkerDay"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/star"
                            android:layout_marginStart="2dp"
                            android:contentDescription="star" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sản phẩm đã mua -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.SecondChance.Card.Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/grayDay"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.TopLeftNotCorner"
                    app:cardElevation="0dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <!-- Nội dung đánh giá -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shop tư vấn nhiệt tình, đóng gói cẩn thận, lúc về đến nhà check đúng sự thật. Cảm ơn shop, ship nhanh tại mình đang cần gấp hệ hệ"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16"
                            android:layout_marginBottom="8dp" />

                        <!-- 3 ảnh nhỏ -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="left">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/giohoa1"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/RoundedImageView_8dp"
                                android:layout_marginEnd="5dp"
                                android:contentDescription="review image 1" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/giohoa2"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/RoundedImageView_8dp"
                                android:layout_marginEnd="5dp"
                                android:contentDescription="review image 2" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/giohoa3"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/RoundedImageView_8dp"
                                android:contentDescription="review image 3" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--        Phần nếu đã có reply-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{hasReply ? View.VISIBLE : View.GONE}">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/redo"
                app:tint="@color/darkerDay"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop đã phản hồi"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_13"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Card phản hồi -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/highlight4blur">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/highLight5"
                android:layout_marginEnd="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp">

                <!-- Dòng 1: Avatar + Tên + Ngày -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <!-- Avatar shop -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/avatar1"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImageView_20dp"
                        android:contentDescription="Shop avatar" />

                    <!-- Tên + Ngày -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Fish can Fly"
                        android:textColor="@color/darkerDay"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_16"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="18/02/2025"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13" />
                </LinearLayout>

                <!-- Nội dung phản hồi -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop xin lỗi vì những sự cố như thế này, mong bạn có thể ib lại, để shop hỗ trợ tư vấn ạ"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    </LinearLayout>
</layout>
