<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/whiteDay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- STEP 1: Basic Info -->
        <LinearLayout
            android:id="@+id/layout_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image ViewPager with Indicators -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- ViewPager2 for Image Slider -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/imageViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>
            </androidx.cardview.widget.CardView>
            <!-- Indicators -->
            <LinearLayout
                android:id="@+id/layoutIndicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh sản phẩm"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>
            <!-- Thumbnail Images -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/thumbnail_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_add_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/bg_normalday_dashline"
                        android:orientation="vertical"

                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add_media"
                            android:paddingTop="4dp"
                            app:tint="@color/darkerDay"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thêm ảnh/video"
                            android:textSize="@dimen/text_13"
                            android:gravity="center"
                            android:padding="4dp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Product Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giỏ gỏ cắm hoa"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="16dp"/>

            <!-- Product Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại giá"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_light_active_outline"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="50000"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng sản phẩm"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_condition_used"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chưa sử dụng"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng mới"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_condition_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="99%"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng hư hỏng"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_condition_damage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0%"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính sách bảo hành"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_warranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="3 tháng"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính sách đổi trả"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_return_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Có đổi trả"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguồn gốc sản phẩm"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/et_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Có nguồn"
                android:padding="12dp"
                android:background="@drawable/bg_light_active_outline"
                android:layout_marginBottom="24dp"/>
            <LinearLayout
                android:id="@+id/btn_next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếp theo"
                    android:textColor="#F25C05"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:contentDescription="Tiếp theo"
                    android:src="@drawable/arrow_right_ske"
                    app:tint="#F25C05" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>