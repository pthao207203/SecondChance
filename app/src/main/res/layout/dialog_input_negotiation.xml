<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/whiteDay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- NÚT ĐÓNG -->
        <ImageView
            android:id="@+id/btnCloseSuccess"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:padding="16dp"
            android:layout_margin="4dp"
            android:contentDescription="Đóng"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/darkerDay" />

        <!-- NỘI DUNG -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:paddingHorizontal="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/currency_exchange"
                android:contentDescription="Trao đổi giá" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nhập số tiền thương lượng"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/RuleNegotiation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thương lượng với số tiền thấp hơn số tiền gốc 20%"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_13"
                android:layout_marginTop="8dp" />

            <!-- SỐ TIỀN GỐC -->
            <LinearLayout
                android:id="@+id/checkboxContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/money"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/monetization_on"
                    android:contentDescription="Tiền" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số tiền gốc"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"
                    android:textStyle="bold"
                    android:textColor="@color/normalDay"
                    android:textSize="@dimen/text_20" />

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="500.000"
                    android:textStyle="bold"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_20" />
            </LinearLayout>

            <!-- SỐ TIỀN THƯƠNG LƯỢNG -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền thương lượng"
                android:textSize="@dimen/text_16"
                android:textColor="@color/darkerDay"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etNegotiationPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_light_active_outline"
                android:padding="8dp"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_16"
                android:hint="Nhập giá (đ)"
                android:inputType="numberDecimal" />

            <!-- LÝ DO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyên nhân"
                android:textSize="@dimen/text_16"
                android:textColor="@color/darkerDay"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_light_active_outline"
                android:padding="8dp"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_16"
                android:hint="Ví dụ: Sản phẩm có sứt mẻ"
                android:inputType="text|textMultiLine" />

            <!-- NÚT GỬI -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegisterSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:text="GỬI THƯƠNG LƯỢNG"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/whiteDay"
                app:backgroundTint="@color/normalDay"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
