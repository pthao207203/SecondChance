<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="12dp"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#F5F5F5">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="113dp"
            android:layout_height="109dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_flower" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ gỗ cắm hoa"
            android:textStyle="bold"
            android:textColor="#222222"
            android:textSize="15sp"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@+id/tvPrice"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₫ 50.000"
            android:textStyle="bold"
            android:textColor="#D26E2D"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="10dp"
            android:text="x1"
            android:textColor="#222222"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubtitleFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá cố định"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_below="@id/tvTitle"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvSubtitleDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSubtitleFixed"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imgProduct"
            android:text="Đã tạo ngày: 17/06/2025"
            android:textColor="#666666"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSubtitleDate"
            android:layout_marginStart="11dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/imgProduct"
            android:text="Hủy đơn"
            android:textColor="#E56D2D"
            android:textSize="12sp"
            app:strokeColor="#E56D2D"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minHeight="0dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/btnCancel"
            android:layout_alignBottom="@id/btnCancel"
            android:gravity="center_vertical"
            android:text="Chưa xác nhận"
            android:textColor="#D26E2D"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imgDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@id/tvStatus"
            android:layout_alignTop="@id/btnCancel"
            android:layout_alignBottom="@id/btnCancel"
            android:src="@drawable/ic_dot" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>