<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/whiteDay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnCloseSuccess"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:contentDescription="Đóng"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/darkerDay" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:paddingHorizontal="20dp"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/done_all"
                android:contentDescription="Checkall" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Trước khi vào đấu giá"
                android:textColor="@color/darkerDay"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/checked_round"
                    android:contentDescription="Thành công" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền trong Ví lớn hơn hoặc bằng tiền khởi điểm"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/checked_round"
                    android:contentDescription="Thành công" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khi ra giá phải ra giá số tiền nhỏ hơn hoặc bằng tiền trong Ví và lớn hơn số tiền hiện tại"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/checked_round"
                    android:contentDescription="Thành công" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nếu đấu giá thành công, đơn hàng lập tức thanh toán và trừ thẳng tiền trong Ví, và đơn hàng không thể hủy."
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/checked_round"
                    android:contentDescription="Thành công" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nếu đấu giá thất bại, đơn hàng sẽ hủy"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnAuction"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/normalDay"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/normalDay">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="ĐẤU GIÁ"
                    android:textColor="@color/lighterDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
