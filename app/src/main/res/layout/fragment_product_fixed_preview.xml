<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/whiteDay">

            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pen"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Chỉnh sửa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Chỉnh sửa"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/darkerDay" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="đang ở chế độ xem trước"
                android:layout_marginEnd="2dp"

                android:textColor="@color/normalDay"
                android:textStyle="bold"
                android:textSize="@dimen/text_16" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/normalDay"
                    android:contentDescription="Chỉnh sửa"/>

            </LinearLayout>
        </RelativeLayout>
        <!-- PHẦN THÔNG TIN SẢN PHẨM + SLIDER -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:dividerPadding="8dp">

            <!-- ========== IMAGE SLIDER ========== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image_slider_container"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginBottom="8dp">

                <!-- ViewPager2: giữ id CŨ = imageViewPager -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imageViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Dots indicator: giữ id CŨ = layoutIndicators -->
            <LinearLayout
                android:id="@+id/layoutIndicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ========== TÊN + GIÁ ========== -->
            <LinearLayout
                android:id="@+id/product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <!-- Tên sản phẩm: giữ id CŨ = tv_product_name -->
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giỏ gỗ cắm hoa"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/darkerDay"
                    android:textStyle="bold" />

                <!-- Ký hiệu tiền tệ (không bắt buộc id) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="đ"
                    android:textColor="@color/normalDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <!-- Giá: giữ id CŨ = tv_price -->
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50.000"
                    android:textColor="@color/darkerDay"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ========== RATING + SỐ LƯỢNG ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Giữ id CŨ layoutRatingStars, nhưng UI mới: icon + điểm -->
                <LinearLayout
                    android:id="@+id/layoutRatingStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/star"
                        android:contentDescription="star" />

                    <TextView
                        android:id="@+id/rating_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textColor="#000"
                        android:textSize="@dimen/text_13"
                        android:layout_gravity="center" />
                </LinearLayout>

                <!-- Số lượng: giữ id CŨ = tv_quantity -->
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 1"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:gravity="end" />
            </LinearLayout>

            <!-- ========== NÚT GIỎ HÀNG + MUA NGAY ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <!-- Giữ id CŨ = btn_add_to_cart -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.SecondChance.Card.Number"
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginEnd="2dp"
                    android:backgroundTint="@color/highlight4blur"
                    app:cardElevation="0dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.LeftCorner">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="8dp">

                        <ImageView
                            android:id="@+id/iconcart"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/shopping_cart_02"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:contentDescription="cart" />

                        <TextView
                            android:id="@+id/textAddToCart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Thêm vào giỏ hàng"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <!-- Countdown giữ nguyên (id mới, code chưa dùng thì kệ) -->
                    <LinearLayout
                        android:id="@+id/countdown_timer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:visibility="gone">
                        <!-- ... giữ nguyên như bạn đã viết ... -->
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Giữ id CŨ = btn_buy_now -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.SecondChance.Card.Number"
                    android:id="@+id/btn_buy_now"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:backgroundTint="@color/normalDay"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.RightCorner">

                    <TextView
                        android:id="@+id/text_buy_now"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:text="MUA NGAY"
                        android:textColor="@color/whiteDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Loại giá: giữ id CŨ = tv_type -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.SecondChance.Card.Number"
                android:id="@+id/card_negotiation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp"
                    android:gravity="center"
                    android:text="Thương lượng"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="normal" />
            </com.google.android.material.card.MaterialCardView>

            <!-- ========== THÔNG TIN CHUNG (COMMON INFO) ========== -->
            <!-- (không bắt buộc id cũ nào, bạn có thể giữ y như bản mới) -->
            <!-- ... GIỮ NGUYÊN COMMON INFO SECTION NHƯ BẠN ĐÃ VIẾT ... -->

            <!-- ========== GIAO HÀNG (DELIVERY) ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Giao hàng"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.SecondChance.Card.Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grayDay"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp">

                        <!-- Thời gian giao: giữ id CŨ = tvDeliveryTime -->
                        <TextView
                            android:id="@+id/tvDeliveryTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="Khoảng 3 ngày từ ngày đặt"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_13"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <!-- Avatar shop: giữ id CŨ = ivAvatar -->
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/ivAvatar"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="avatar"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/avatar1"
                                    app:shapeAppearanceOverlay="@style/RoundedImageView_25dp" />

                                <!-- Badge "Đã xác thực": giữ id CŨ = tvVerified -->
                                <com.google.android.material.card.MaterialCardView
                                    style="@style/Widget.SecondChance.Card.Number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-12dp"
                                    app:cardBackgroundColor="@color/lightActiveDay"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp">

                                    <TextView
                                        android:id="@+id/tvVerified"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center_horizontal"
                                        android:background="@drawable/bg_light_active_solid"
                                        android:paddingHorizontal="6dp"
                                        android:paddingVertical="2dp"
                                        android:text="Đã xác thực"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="@dimen/text_13" />
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>

                            <!-- Thông tin người bán -->
                            <LinearLayout
                                android:id="@+id/sellerInfoContainer"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/sellerHeaderRow"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <!-- Tên shop: giữ id CŨ = tvShipperName -->
                                    <TextView
                                        android:id="@+id/tvShipperName"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Cá Biết Bay"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="@dimen/text_16"
                                        android:textStyle="bold" />

                                    <!-- Khoảng cách: giữ id CŨ = tvDistance -->
                                    <TextView
                                        android:id="@+id/tvDistance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cách bạn 3km"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="@dimen/text_13"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <!-- Địa chỉ: giữ id CŨ = tvShipperAddress -->
                                <TextView
                                    android:id="@+id/tvShipperAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Sản phẩm được giao tại Quận 1, thành phố HCM, Việt Nam."
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_16" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- ========== CHI TIẾT SẢN PHẨM + TABS CUSTOM ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Chi tiết sản phẩm"
                    android:textColor="@color/darkerDay"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_16" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.SecondChance.Card.Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/whiteDay"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- HÀNG TAB -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Tab Mô tả -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/tabDescription"
                                style="@style/Widget.SecondChance.Card.Number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="0dp"
                                android:background="@color/grayDay"
                                android:clickable="true"
                                android:focusable="true">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="12dp"
                                        android:text="Mô tả"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="@dimen/text_13"
                                        android:textStyle="bold" />
                                    <View
                                        android:id="@+id/indicatorDescription"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/whiteDay"
                                        android:visibility="visible"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Tab Nguồn -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/tabSource"
                                style="@style/Widget.SecondChance.Card.Number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="0dp"
                                android:background="@color/grayDay"
                                android:clickable="true"
                                android:focusable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="12dp"
                                        android:text="Nguồn"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="@dimen/text_13"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/indicatorSource"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/whiteDay"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Tab Minh chứng -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/tabEvidence"
                                style="@style/Widget.SecondChance.Card.Number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="0dp"
                                android:background="@color/grayDay"
                                android:clickable="true"
                                android:focusable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingTop="12dp"
                                        android:paddingBottom="12dp"
                                        android:text="Minh chứng"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="@dimen/text_13"
                                        android:textStyle="bold" />
                                    <View
                                        android:id="@+id/indicatorEvidence"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/whiteDay"
                                        android:visibility="visible"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Tab Khác -->
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/tabOther"
                                style="@style/Widget.SecondChance.Card.Number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="0dp"
                                android:background="@color/grayDay"
                                android:clickable="true"
                                android:focusable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:padding="12dp"
                                        android:text="Khác"
                                        android:textColor="@color/darkerDay"
                                        android:textSize="@dimen/text_13"
                                        android:textStyle="bold" />
                                    <View
                                        android:id="@+id/indicatorOther"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/whiteDay"
                                        android:visibility="visible"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <!-- NỘI DUNG TAB -->
                        <!-- Giữ id CŨ: contentDescription, contentSource, contentProof, contentOther -->
                        <LinearLayout
                            android:id="@+id/contentDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giỏ gỗ cắm hoa đã mua, chưa qua sử dụng new 99%.\nĐảm bảo chất lượng trong quá trình vận hành"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contentSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nguồn: Shopee - Shop Hoa Tươi ABC"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_13" />
                        </LinearLayout>

                        <!-- ĐỔI id từ contentEvidence -> contentProof -->
                        <LinearLayout
                            android:id="@+id/contentProof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Minh chứng:"
                                android:textStyle="bold"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_13"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/giohoa2"
                                    android:scaleType="centerCrop"
                                    app:shapeAppearanceOverlay="@style/RoundedImageView_8dp"
                                    android:layout_marginEnd="8dp" />

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/giohoa3"
                                    android:scaleType="centerCrop"
                                    app:shapeAppearanceOverlay="@style/RoundedImageView_8dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contentOther"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Không có thông tin khác."
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_13" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_normalday_solid"
            android:text="đăng bài"
            android:textColor="@color/whiteDay"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"/>

    </LinearLayout>
</ScrollView>
