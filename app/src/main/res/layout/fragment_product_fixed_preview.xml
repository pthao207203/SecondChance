<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/whiteDay">

            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pen"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Chỉnh sửa"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Chỉnh sửa"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/darkerDay" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="đang ở chế độ xem trước"
                android:layout_marginEnd="2dp"

                android:textColor="@color/normalDay"
                android:textStyle="bold"
                android:textSize="@dimen/text_16" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/normalDay"
                    android:contentDescription="Chỉnh sửa"/>

            </LinearLayout>
        </RelativeLayout>

        <!-- Image ViewPager with Indicators -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- ViewPager2 for Image Slider -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imageViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </FrameLayout>
        </androidx.cardview.widget.CardView>
        <!-- Indicators -->
        <LinearLayout
            android:id="@+id/layoutIndicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center"/>

        <!-- Product and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold"
                    tools:text="Áo vàng cổ điển" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="đ"
                    android:textColor="@color/normalDay"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold"
                    tools:text="50000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Rating Bar -->
                <LinearLayout
                    android:id="@+id/layoutRatingStars"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/normalDay"
                        android:contentDescription="Star 1"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/normalDay"
                        android:contentDescription="Star 2"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/normalDay"
                        android:contentDescription="Star 3"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/normalDay"
                        android:contentDescription="Star 4"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_border"
                        android:layout_marginStart="4dp"
                        app:tint="@color/normalDay"
                        android:contentDescription="Star 5"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="số lượng: 1"
                    android:textSize="@dimen/text_13"
                    android:textColor="#666666"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_add_to_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="2dp"
                app:cardBackgroundColor="#8ECAE6"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.AddToCart">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="@dimen/space_16">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/darkerDay"
                        android:src="@drawable/ic_cart"
                        android:contentDescription="cart" />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="220dp"
                        android:text="THÊM VÀO GIỎ HÀNG"
                        android:gravity="center"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_16"
                        android:textStyle="normal" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="@color/highLight5"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.Card.BuyNow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="MUA NGAY"
                    android:textColor="@color/whiteDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Product Type -->
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thương lượng"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:background="@drawable/bg_gray_solid"
            android:paddingHorizontal="28dp"
            android:paddingVertical="12dp"/>

        <!-- General Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chung"
            android:textSize="@dimen/text_16"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"/>

        <!-- Info Grid -->
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa sử dụng"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_gray_solid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mới 99%"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_gray_solid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hỏng 0%"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_gray_solid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguồn uy tín"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_gray_solid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo hành 3 tháng"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_gray_solid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có đổi trả"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_gray_solid"/>

        </com.google.android.flexbox.FlexboxLayout>

        <!-- Delivery Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao hàng"
            android:textSize="@dimen/text_16"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:backgroundTint="@color/grayDay">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/tvDeliveryTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Khoảng 3 ngày kể từ ngày đặt"
                    android:layout_marginStart="12dp"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_13"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_circle"
                    android:contentDescription="Avatar"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDeliveryTime"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

                <TextView
                    android:id="@+id/tvVerified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_light_active_solid"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="Đã xác thực"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13"
                    app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
                    app:layout_constraintEnd_toEndOf="@id/ivAvatar"
                    app:layout_constraintStart_toStartOf="@id/ivAvatar" />

                <TextView
                    android:id="@+id/tvShipperName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Fish can Fly"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_13"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivAvatar"
                    app:layout_constraintTop_toTopOf="@id/ivAvatar" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cách bạn 13km"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_13"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvShipperName"
                    app:layout_constraintBottom_toBottomOf="@id/tvShipperName"/>

                <TextView
                    android:id="@+id/tvShipperAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Sản phẩm được giao từ Quận 1, TP. HCM, Việt Nam."
                    android:textColor="#666666"
                    android:textSize="@dimen/text_13"
                    android:layout_marginEnd="@dimen/text_13"
                    app:layout_constraintStart_toStartOf="@id/tvShipperName"
                    app:layout_constraintTop_toBottomOf="@id/tvShipperName"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/bottom_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="ivAvatar,tvShipperAddress" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Product Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết sản phẩm"
            android:textSize="@dimen/text_16"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"/>

        <!-- Tabs -->

        <!-- Tab Content -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            app:tabIndicatorColor="@color/highLight4"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedBackground="@drawable/tab_selected"
            app:tabSelectedTextColor="@color/darkerDay"
            app:tabTextColor="@color/darkerDay">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguồn" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minh chứng" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác" />
        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/tabContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <!-- Description Content -->
            <TextView
                android:id="@+id/contentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giỏ gỏ cắm hoa đã mua, chưa qua sử dụng new 99%. Đảm bảo chất lượng trong quá trình vận hành"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:visibility="visible"/>

            <!-- Source Content -->
            <TextView
                android:id="@+id/contentSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguồn sản phẩm: [Thông tin nguồn gốc]"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:visibility="gone"/>

            <!-- Proof Content -->
            <TextView
                android:id="@+id/contentProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minh chứng: [Thông tin minh chứng]"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:visibility="gone"/>

            <!-- Other Content -->
            <TextView
                android:id="@+id/contentOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin khác: [Thông tin bổ sung]"
                android:textSize="@dimen/text_13"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:visibility="gone"/>
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_publish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_normalday_solid"
            android:text="đăng bài"
            android:textColor="@color/whiteDay"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
