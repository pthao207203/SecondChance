<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EF">

    <!-- Wave trang trí -->
    <ImageView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/frame1000002455"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Logo + Title -->
    <ImageView
        android:paddingHorizontal="40dp"
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo2chance"
        app:layout_constraintDimensionRatio="269:120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="1" />

    <TextView
        style="@style/Text.SecondChance.Link"
        android:paddingHorizontal="40dp"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_otp_code"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"/>

    <!-- 6 ô nhập OTP -->
    <LinearLayout
        android:paddingHorizontal="40dp"
        android:id="@+id/otpBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="6"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tạo 6 EditText giống nhau -->
        <EditText
            android:id="@+id/edtOtp1"
            style="@style/OtpCell"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/edtOtp2"
            style="@style/OtpCell"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/edtOtp3"
            style="@style/OtpCell"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/edtOtp4"
            style="@style/OtpCell"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/edtOtp5"
            style="@style/OtpCell"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/edtOtp6"
            style="@style/OtpCell"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/btnConfirmOtp"
        style="@style/Widget.SecondChance.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/confirm"
        app:layout_constraintTop_toBottomOf="@id/otpBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/space_24"
        app:contentPaddingStart="@dimen/space_24"
        app:contentPaddingEnd="@dimen/space_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>
