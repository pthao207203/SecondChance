<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llAddressRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/selector_address_item">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_profile0"
        android:layout_marginEnd="8dp"
        app:tint="@color/selector_address_tint_blue" android:duplicateParentState="true" android:contentDescription="Người nhận" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cá Biệt Bay"
        android:textSize="@dimen/text_16"
        android:textColor="@color/darkerDay" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_phone_num0"
            android:layout_marginEnd="8dp"
            app:tint="@color/selector_address_tint_blue" android:duplicateParentState="true"
            android:contentDescription="Số điện thoại" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0333 333 333"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_map_pin0"
            android:layout_marginEnd="8dp"
            app:tint="@color/selector_address_tint_blue" android:duplicateParentState="true"
            android:contentDescription="Địa chỉ" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thôn Cá, xã Biệt, quận bay, thành phố Fish Can Fly, nước Fish Fly"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

</LinearLayout>