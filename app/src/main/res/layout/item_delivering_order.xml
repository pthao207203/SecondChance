<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ring"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫ 50.000"
                android:textColor="#D26E2D"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/tvTitle"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhẫn kim cương hữu hạn"
                android:textColor="@color/darkerDay"
                android:textStyle="bold"
                android:layout_toEndOf="@id/imgProduct"
                android:layout_toStartOf="@id/tvPrice"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/tvTitle"
                android:layout_toEndOf="@id/imgProduct"
                android:layout_toStartOf="@id/tvPrice"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: 1"
                    android:textSize="12sp"
                    android:textColor="@color/darkerDay"/>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giỏ hoa loại 1 new 99%, của hàng abc thành phố Xuân Hợp he he"
                    android:textSize="12sp"
                    android:textColor="@color/darkerDay"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FFF7F3">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã đến bưu cục Trần Thị ABC, của tỉnh TP.HCM"

                android:textColor="@color/darkerDay"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/imgArrow"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:tint="@color/darkerDay" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>