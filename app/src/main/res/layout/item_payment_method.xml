<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/selector_payment_method">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivBankLogo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_credit_card"
                app:tint="@color/selector_address_tint_blue" android:duplicateParentState="true"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:id="@+id/tvBankName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Vietcombank 0999 888 777"
                android:textColor="@color/darkerDay"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_circle_minus"
                app:tint="@color/selector_address_tint_blue" android:duplicateParentState="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="Delete payment method"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvBankDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="NGUYEN VAN A"
            android:textAllCaps="true"
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>