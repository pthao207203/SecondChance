<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/selector_payment_method">


    <ImageView
        android:id="@+id/ivBankLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_credit_card"
        app:tint="@color/darkerDay"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Vietcombank"
            android:textColor="@color/darkerDay"
            android:textSize="16sp"
            android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_circle_minus"
                app:tint="@color/darkerDay"
                android:layout_gravity="center_vertical"
                android:contentDescription="Delete payment method"/>


        </LinearLayout>
        <TextView
            android:id="@+id/tvBankDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGUYEN VAN A - 123456..."
            android:textColor="#666666"
            android:textSize="14sp"/>
    </LinearLayout>


</LinearLayout>