<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/lighterDay">
    <ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_check_circle"
        app:tint="@color/normalDay"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh Toán Thành Công!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/normalDay"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cảm ơn bạn đã mua sắm tại SecondChance.\nĐơn hàng của bạn đang được xử lý."
        android:textSize="17sp"
        android:textColor="@color/darkerDay"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="4dp" />
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục mua sắm"
        android:backgroundTint="@color/normalDay"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:paddingVertical="14dp"
        app:cornerRadius="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn có thể kiểm tra trạng thái đơn hàng của mình trong Lịch sử đặt hàng."
        android:textSize="14sp"
        android:textColor="@color/darkerDay"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>
