<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDay"
    android:fitsSystemWindows="true">

    <!-- ====================== SCROLL CONTENT ====================== -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal"
                android:background="@color/grayDay">

                <LinearLayout
                    android:id="@+id/tabAccountInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_circle_warning"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Điều khoản" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điều khoản"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/darkerDay"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabSupport"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_circle_questionmark"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Hỗ trợ" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hỗ trợ"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/darkerDay"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabSettings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_setting"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Cài đặt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cài đặt"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/darkerDay"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabLogout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_logout"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Đăng xuất" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đăng xuất"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/darkerDay"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== USER INFO ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Avatar + Badge -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:contentDescription="Avatar"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:srcCompat="@drawable/avatar1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@drawable/bg_light_active_solid"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="Đã xác thực"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13" />
                </FrameLayout>

                <!-- User Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_profile0"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cá Biết Bay"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/building_01"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvShop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shop Cá bán đồ 2 hand"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_phone_num0"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0333 333 333"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_map_pin0"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="Thôn Cá, xã Biết, quận bay, thành phố Fish Can Fly, nước Fish Fly"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_mail"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cabietbay@gamil.com"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== ACTION BUTTONS ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/lighterDay"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/normalDay">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Nhắn với khách"
                        android:textColor="@color/normalDay"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnViewReview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/normalDay"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/normalDay">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Xem đánh giá"
                        android:textColor="@color/lighterDay"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


            <!-- ==================== RATING BAR ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/grayDay"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <!-- 1. Tỉ lệ phản hồi -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/chat"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉ lệ phản hồi"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- 2. Đánh giá -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star_border_purple500"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá"
                        android:textColor="@color/darkerDay"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- 3. Tỉ lệ thương lượng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/arrow_reload_02"
                        app:tint="@color/darkerDay" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉ lệ thương lượng"
                        android:textColor="@color/darkerDay"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99%"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- 4. Sản phẩm -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/checkbox_fill"

                        android:gravity="center"
                        app:tint="@color/darkerDay" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textColor="@color/darkerDay"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ví của tôi"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:textColor="@color/darkerDay" />

                <TextView
                    android:id="@+id/tvViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem chi tiết"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/darkerDay"
                    />
            </LinearLayout>

            <!-- Wallet Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/highlight4blur"
                    app:cardCornerRadius="@dimen/radius_l">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/space_16"
                        android:paddingVertical="@dimen/space_12">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Ví tiền"
                            android:src="@drawable/ic_credit_card_01"
                            app:tint="@color/darkerDay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ví tiền của tôi:"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="đ"
                                android:textColor="@color/normalDay"
                                android:textSize="@dimen/text_16"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tvWalletBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="170000"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_16"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lịch sử đặt hàng"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                android:textColor="@color/darkerDay"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginTop="@dimen/space_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/space_16"
                android:layout_marginTop="8dp"
                android:baselineAligned="false">
                <LinearLayout
                    android:id="@+id/btnPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xác nhận"
                            android:textSize="@dimen/text_13" android:textColor="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvPendingCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/bg_badge_count"
                            android:gravity="center"
                            android:minWidth="18dp"
                            android:minHeight="18dp"
                            android:paddingHorizontal="5dp"
                            android:text="0" android:textColor="@color/whiteDay"
                            android:textSize="10sp"
                            android:visibility="gone" tools:visibility="visible"
                            tools:text="17"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_clock2"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Xác nhận" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang giao"
                            android:textSize="@dimen/text_13"
                            android:textColor="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvShippingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/bg_badge_count"
                            android:gravity="center"
                            android:minWidth="18dp"
                            android:minHeight="18dp"
                            android:paddingHorizontal="5dp"
                            android:text="0"
                            android:textColor="@color/whiteDay"
                            android:textSize="10sp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            tools:text="17"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_eta"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Đang giao" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnPurchased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã mua"
                        android:textSize="@dimen/text_13"
                        android:textColor="@color/darkerDay" />
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_completed"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Đã mua" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCancelled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã hủy"
                        android:textSize="@dimen/text_13"
                        android:textColor="@color/darkerDay" />
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_cancelled"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Đã hủy" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnRefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingVertical="12dp"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã hoàn"
                        android:textSize="@dimen/text_13"
                        android:textColor="@color/darkerDay" />
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_refund"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Đã hoàn" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm của bạn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/darkerDay"
