<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Profile Info Item -->
    <LinearLayout
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chỉnh sửa hồ sơ"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:textColor="@color/blackDay" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chevron_right"
            app:tint="@color/darkerDay"
            android:contentDescription="Xem" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ và tên, SĐT, Email, Địa chỉ, Ngân hàng"
        android:textSize="@dimen/text_16"
        android:textColor="@color/blackDay"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- Account Settings Item -->
    <LinearLayout
        android:id="@+id/btnAccountSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chỉnh sửa tài khoản"
            android:textColor="@color/blackDay"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chevron_right"
            app:tint="@color/darkerDay"
            android:contentDescription="Xem" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên người dùng, Mật khẩu"
        android:textSize="@dimen/text_16"
        android:textColor="#666666"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

    <!-- System Settings Item -->
    <LinearLayout
        android:id="@+id/btnSystemSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cài đặt hệ thống"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:textColor="@color/darkerDay" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/chevron_right"
            app:tint="@color/darkerDay"
            android:contentDescription="Xem" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:text="Chế độ sáng tối, ngôn ngữ"
        android:textColor="@color/blackDay"
        android:textSize="@dimen/text_16" />

</LinearLayout>