<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDay"
    android:fitsSystemWindows="true">

    <!-- ====================== SCROLL CONTENT ====================== -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ==================== USER INFO ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Avatar + Badge -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:contentDescription="Avatar"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:srcCompat="@drawable/avatar1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:background="@drawable/bg_light_active_solid"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="Đã xác thực"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13" />
                </FrameLayout>

                <!-- User Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_profile0"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cá Biết Bay"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>

                    <!-- Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_phone_num0"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0333 333 333"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_map_pin0"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="Thôn Cá, xã Biết, quận bay, thành phố Fish Can Fly, nước Fish Fly"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_mail"
                            app:tint="@color/darkerDay" />
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cabietbay@gamil.com"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== ACTION BUTTONS ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/lighterDay"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/normalDay">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Nhắn với shop"
                        android:textColor="@color/normalDay"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnViewReview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/normalDay"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/normalDay">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Xem đánh giá"
                        android:textColor="@color/lighterDay"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- ==================== RATING BAR ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/grayDay"
                android:paddingHorizontal="16dp"
                android:paddingVertical="10dp">

                <!-- 1. Tỉ lệ phản hồi -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/chat"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉ lệ phản hồi"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- 2. Đánh giá -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star_border_purple500"

                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đánh giá"
                        android:textColor="@color/darkerDay"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- 3. Tỉ lệ thương lượng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/arrow_reload_02"
                        app:tint="@color/darkerDay" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỉ lệ thương lượng"
                        android:textColor="@color/darkerDay"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99%"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- 4. Sản phẩm -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/checkbox_fill"

                        android:gravity="center"
                        app:tint="@color/darkerDay" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm"
                        android:textColor="@color/darkerDay"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_13"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <!--========================== CÁC SẢN PHẨM CỦA SHOP==================================-->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.SecondChance.Card.Number"
                android:layout_width="match_parent"
                app:cardCornerRadius="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/whiteDay"
                app:cardElevation="0dp">

                <!-- TAB CONTAINER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- TAB ROW -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- TAB: CỐ ĐỊNH -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/tabFixed"
                            style="@style/Widget.SecondChance.Card.Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="0dp"
                            android:background="@color/grayDay"
                            android:clickable="true"
                            android:focusable="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="12dp"
                                    android:text="Cố định"
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_13"
                                    android:textStyle="bold" />
                                <View
                                    android:id="@+id/indicatorFixed"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/whiteDay"
                                    android:visibility="visible"
                                    />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- TAB: THƯƠNG LƯỢNG -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/tabNegotiation"
                            style="@style/Widget.SecondChance.Card.Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="0dp"
                            android:background="@color/grayDay"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="12dp"
                                    android:text="Thương lượng"
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_13"
                                    android:textStyle="bold" />
                                <View
                                    android:id="@+id/indicatorNegotiation"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/whiteDay"
                                    android:visibility="visible"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- TAB: ĐẤU GIÁ -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/tabAuction"
                            style="@style/Widget.SecondChance.Card.Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="0dp"
                            android:background="@color/grayDay"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="12dp"
                                    android:text="Đấu giá"
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_13"
                                    android:textStyle="bold" />
                                <View
                                    android:id="@+id/indicatorAuction"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/whiteDay"
                                    android:visibility="visible"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- TAB: ĐÃ BÁN -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/tabSold"
                            style="@style/Widget.SecondChance.Card.Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="0dp"
                            android:background="@color/grayDay"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="12dp"
                                    android:text="Đã bán"
                                    android:textColor="@color/darkerDay"
                                    android:textSize="@dimen/text_13"
                                    android:textStyle="bold" />
                                <View
                                    android:id="@+id/indicatorSold"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/whiteDay"
                                    android:visibility="visible"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- NỘI DUNG -->
                    <LinearLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:id="@+id/contentFixed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="visible">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                                app:spanCount="2"
                                tools:listitem="@layout/item_product_fixedcard" />
                        </LinearLayout>

                        <!-- ==================== CONTENT THƯƠNG LƯỢNG ==================== -->
                        <LinearLayout
                            android:id="@+id/contentNegotiation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                                app:spanCount="2"
                                tools:listitem="@layout/item_product_negotiationcard" />
                        </LinearLayout>

                        <!-- ==================== CONTENT ĐẤU GIÁ ==================== -->
                        <LinearLayout
                            android:id="@+id/contentAuction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:visibility="gone">

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:nestedScrollingEnabled="false"
                                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                                app:spanCount="2"
                                tools:listitem="@layout/item_product_auctioncard" />
                        </LinearLayout>

                        <!-- ==================== CONTENT ĐÃ BÁN ==================== -->

                    </LinearLayout>



                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
