<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteDay"
    android:padding="16dp">

    <!-- Shop Info & Product Info -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivShopAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile0"
            app:civ_border_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Shop Name"
            android:textColor="@color/darkerDay"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivShopAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18/02/2025"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/tvShopName"
            app:layout_constraintStart_toEndOf="@id/tvShopName" />

        <TextView
            android:id="@+id/tvProductInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm, phân loại"
            android:textSize="@dimen/text_16"
            android:textColor="@color/darkerDay"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tvShopName"
            app:layout_constraintTop_toBottomOf="@id/tvShopName"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Rating Stars -->
    <LinearLayout
        android:id="@+id/layout_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/starempty"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/star2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/starempty"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/star3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/starempty"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/star4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/starempty"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/star5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/starempty"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <!-- Image Upload -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/thumbnail_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_add_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_border_dashed_lightblue"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_media"
                    android:paddingTop="4dp"
                    app:tint="@color/highLight5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add\nphoto/\nvideo"
                    android:textSize="@dimen/text_13"
                    android:gravity="center"
                    android:textColor="@color/highLight5"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    
    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_border_lightblue"
        android:gravity="top|start"
        android:padding="12dp"
        android:textColor="@color/darkerDay"
        android:textSize="@dimen/text_20"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi"
        android:textStyle="bold"
        android:textSize="@dimen/text_20"
        android:padding="12dp"
        app:cornerRadius="8dp"
        app:backgroundTint="#F25C05"
        android:textColor="@color/whiteDay"/>

</LinearLayout>