<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_16"
        android:paddingEnd="@dimen/space_16">

        <!-- “Ví của tôi” -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ví của tôi"
            android:textStyle="bold"
            android:textSize="@dimen/text_16"
            android:textColor="#000000" />

        <!-- Hai ô số dư -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_wallet_active"
                android:layout_marginEnd="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ví tiền của tôi"
                    android:textSize="@dimen/text_16"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫170000"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_16"
                    android:textColor="#B45309" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_wallet_inactive"
                android:layout_marginStart="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiền đã nhận"
                    android:textSize="@dimen/text_16"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫170000"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_16"
                    android:textColor="#B45309" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hướng dẫn -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Vui lòng chuyển khoản theo mã QR hoặc STK dưới đây:"
            android:textColor="#000000"
            android:textSize="@dimen/text_16" />

        <!-- QR -->
        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_qr_demo"
            android:contentDescription="@string/app_name" />

        <!-- Tên tài khoản -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tên tài khoản"
            android:textStyle="bold"
            android:textColor="@color/darkerDay"
            android:layout_marginBottom="@dimen/space_8"
            android:textSize="@dimen/text_16"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Cá biết bay"
            android:padding="12dp"
            android:textColor="#000000"
            android:background="@drawable/bg_input"
            android:textSize="@dimen/text_16"/>

        <!-- Ngân hàng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Ngân hàng"
            android:textStyle="bold"
            android:textColor="@color/darkerDay"
            android:layout_marginBottom="@dimen/space_8"
            android:textSize="@dimen/text_16"/>

        <EditText
            android:id="@+id/et_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Momo"
            android:padding="12dp"
            android:textColor="#000000"
            android:background="@drawable/bg_input"
            android:textSize="@dimen/text_16"/>

        <!-- Số ngân hàng -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Số ngân hàng"
            android:textStyle="bold"
            android:textColor="@color/darkerDay"
            android:layout_marginBottom="@dimen/space_8"
            android:textSize="@dimen/text_16" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0987 999 987 678"
            android:padding="12dp"
            android:textColor="#000000"
            android:background="@drawable/bg_input"
            android:textSize="@dimen/text_16" />

        <!-- Chú ý -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Chú ý: Số tiền đã nạp không thể rút về ngân hàng"
            android:textSize="@dimen/text_16"
            android:textColor="#333333" />

        <!-- chừa khoảng cho menu đáy -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
