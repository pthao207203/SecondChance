<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="@color/grayDay">

            <LinearLayout
                android:id="@+id/tabAccountInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_circle_warning"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Điều khoản" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều khoản"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/darkerDay"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabSupport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_circle_questionmark"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Hỗ trợ" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hỗ trợ"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/darkerDay"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Cài đặt"
                    android:src="@drawable/ic_setting"
                    app:tint="@color/darkerDay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cài đặt"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/darkerDay"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabLogout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_logout"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Đăng xuất" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng xuất"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/darkerDay"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Profile Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <!-- Avatar with Badge -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="Avatar"
                            android:background="@drawable/bg_circle"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:background="@drawable/bg_light_active_solid"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="2dp"
                            android:text="Đã xác thực"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_13" />
                    </FrameLayout>

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_profile0"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/darkerDay" />

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>

<!--                        ShopName -->
                        <LinearLayout
                            android:id="@+id/NameShop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/building_01"
                                app:tint="@color/darkerDay" />
                            <TextView
                                android:id="@+id/tvShop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>

                        <!-- Phone -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_phone_num0"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/darkerDay" />

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_16"
                                android:textColor="@color/darkerDay" />
                        </LinearLayout>

                        <!-- Address -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="14dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_map_pin0"
                                app:tint="@color/darkerDay" />

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="248dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLines="2"
                                android:textColor="@color/darkerDay"
                                android:textSize="@dimen/text_16" />
                        </LinearLayout>

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_mail"
                                android:layout_marginEnd="8dp"
                                app:tint="@color/darkerDay" />

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_16"
                                android:textColor="@color/darkerDay" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/Chat_Review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/lighterDay"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/normalDay">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Nhắn với khách"
                    android:textColor="@color/normalDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnViewReview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/normalDay"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/normalDay">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Xem đánh giá"
                    android:textColor="@color/lighterDay"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ShopStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/grayDay"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:visibility="gone">

            <!-- 1. Tỉ lệ phản hồi -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/chat"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tỉ lệ phản hồi"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- 2. Đánh giá -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_border_purple500"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- 3. Tỉ lệ thương lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_reload_02"
                    app:tint="@color/darkerDay" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tỉ lệ thương lượng"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99%"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- 4. Sản phẩm -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/checkbox_fill"

                    android:gravity="center"
                    app:tint="@color/darkerDay" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/darkerDay"
                    android:textSize="@dimen/text_13"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <!-- Wallet Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ví của tôi"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                android:textColor="@color/darkerDay" />

            <TextView
                android:id="@+id/tvViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết"
                android:textSize="@dimen/text_13"
                android:textColor="@color/darkerDay"
                />
        </LinearLayout>

        <!-- Wallet Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="@dimen/radius_l">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/space_16"
                    android:paddingVertical="@dimen/space_12">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Ví tiền"
                        android:src="@drawable/ic_credit_card_01"
                        app:tint="@color/darkerDay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ví tiền của tôi:"
                        android:textColor="@color/darkerDay"
                        android:textSize="@dimen/text_16" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="đ"
                            android:textColor="@color/normalDay"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvWalletBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="170000"
                            android:textColor="@color/darkerDay"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!-- Order History Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử đặt hàng"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:textColor="@color/darkerDay"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="8dp"
            android:baselineAligned="false">
            <LinearLayout
                android:id="@+id/btnPending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xác nhận"
                        android:textSize="@dimen/text_13" android:textColor="@color/darkerDay" />
<!--                    <TextView-->
<!--                        android:id="@+id/tvPendingCount"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="4dp"-->
<!--                        android:background="@drawable/bg_badge_count"-->
<!--                        android:gravity="center"-->
<!--                        android:minWidth="18dp"-->
<!--                        android:minHeight="18dp"-->
<!--                        android:paddingHorizontal="5dp"-->
<!--                        android:text="0" android:textColor="@color/whiteDay"-->
<!--                        android:textSize="@dimen/text_13"-->
<!--                        android:visibility="gone" tools:visibility="visible"-->
<!--                        tools:text="17"/>-->
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_clock2"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Xác nhận" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnShipping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground">

                <!-- Dòng text tiêu đề -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang giao"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/darkerDay" />

                <!-- Icon + badge chồng lên nhau -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"
                    android:clipToOutline="false">

                    <ImageView
                        android:id="@+id/ivShippingIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_eta"
                        app:tint="@color/darkerDay"
                        android:contentDescription="Đang giao" />

<!--                    <TextView-->
<!--                        android:id="@+id/tvShippingCount"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="4dp"-->
<!--                        android:background="@drawable/bg_badge_count"-->
<!--                        android:gravity="center"-->
<!--                        android:minWidth="18dp"-->
<!--                        android:minHeight="18dp"-->
<!--                        android:paddingHorizontal="5dp"-->
<!--                        android:text="0"-->
<!--                        android:textColor="@color/whiteDay"-->
<!--                        android:textSize="8sp"-->
<!--                        android:visibility="gone"-->
<!--                        tools:visibility="visible"-->
<!--                        android:layout_gravity="top|end"-->
<!--                        tools:text="17"/>-->
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnPurchased"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã mua"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/darkerDay" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_completed"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Đã mua" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCancelled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã hủy"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/darkerDay" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_cancelled"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Đã hủy" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnRefund"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã hoàn"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/darkerDay" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_refund"
                    app:tint="@color/darkerDay"
                    android:contentDescription="Đã hoàn" />
            </LinearLayout>

        </LinearLayout>

        <!-- Products Section -->
        <TextView
            android:layout_width="wrap_content"
