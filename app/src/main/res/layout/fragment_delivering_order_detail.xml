<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm mua hàng"
                android:textColor="@color/darkerDay"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- RecyclerView cho danh sách sản phẩm -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="15dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/highlight4blur">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin người nhận:"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_people"
                            app:tint="@color/highLight5" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cá Biết Bay"
                            android:textColor="#222222"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/highLight5" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0333 333 333"
                            android:textColor="#222222"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/highLight5" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhà số 33, đường T, huyện L, thành Phố C"
                            android:textColor="#222222"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/info_box_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ic_info_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/highLight5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn"
                        android:textColor="#222222"
                        android:layout_toEndOf="@id/ic_info_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XYZY1234RTY"
                        android:textColor="#222222"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/stepper_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/step1_icon" android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_inactive"/> <View
                    android:id="@+id/step1_line" android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/highLight4"/>
                    <ImageView
                    android:id="@+id/step2_icon" android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_inactive"/>

                    <View
                        android:id="@+id/step2_line" android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/highLight4"/>

                    <ImageView
                        android:id="@+id/step3_icon" android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_inactive"/>

                    <View
                        android:id="@+id/step3_line" android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/highLight4"/>

                    <ImageView
                        android:id="@+id/step4_icon" android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_inactive"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/step1_label" android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gói hàng"
                        android:textColor="@color/text_secondary" android:gravity="center"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/step2_label" android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đã tới bưu cục"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/step3_label" android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đang giao"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/step4_label" android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giao thành công" android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrackingStatus"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_default"
                android:paddingBottom="@dimen/padding_default">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReceiveOrder"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="24dp"
                    android:text="ĐÃ NHẬN HÀNG"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#E56D2D"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>