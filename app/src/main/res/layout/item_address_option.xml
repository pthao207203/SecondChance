<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProfileIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_profile0"
            app:tint="@color/darkerDay"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/tvReceiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cá Biết Bay"
            android:textColor="@color/darkerDay"
            android:textSize="14sp"/>
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

         <ImageView
             android:id="@+id/ivPhoneIcon"
             android:layout_width="16dp"
             android:layout_height="19dp"
             android:layout_marginEnd="8dp"
             android:src="@drawable/ic_phone"
             app:tint="@color/darkerDay" />
        <TextView
            android:id="@+id/tvReceiverPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0333 333 333"
            android:textColor="@color/darkerDay"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/ivMapPinIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_map_pin0"
            app:tint="@color/darkerDay"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/tvReceiverAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thôn Cá, xã Biển, quận Bay, thành phố Fish Can Fly"
            android:textColor="@color/darkerDay"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>